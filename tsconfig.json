{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "target": "es2021",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/entities/*": [
        "src/entities/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
